<% include ../partials/header %>
<% include ../partials/navbar %>

<div class="page-header">
    <div class="container">
        <div class="jumbotron text-center bg-transparent">
            <h1 class="jumbotron-heading"><a href="<%= application.url %>" target="_blank"><%= application.name %></a></h1>
            <p class="lead">Stars here</p>
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-md-9">
            <div class="jumbotron rounded bg-dark">
                <img src="<%= application.thumbnail%>">
            </div>
            <p class="text-muted"><%= application.description.substr(0, 500) %> <a href="<%= application.url %>">... Read more</a></p>

            <a class="btn btn-sm btn-outline-warning" href="/applications/<%= application._id %>/edit">Edit</a>
            <form class="delete-form" action="/applications/<%= application._id %>?_method=DELETE" method="post">
                <button class="btn btn-sm btn-outline-danger">Delete</button>
            </form>
            <br>
        </div>

    </div>

    <!-- REVIEW SECTION START -->
    <div class="row justify-content-md-center">
        <div class="col-md-9">
            <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#ModalCenter">
                Write your Review
            </button>

            <div class="modal fade" id="ModalCenter" tabindex="-1" role="dialog" aria-labelledby="ModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="ModalLongTitle">Write your Review!</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form action="/applications/<%= application._id %>/reviews" method="POST" id="add-review-form">
                                <div class="form-group">
                                    <input type="text" class="form-control" name="title" placeholder="Name your Review" form="add-review-form" class="text-muted">
                                </div>

                                <div class="form-group">
                                    <label for="example">Design</label>
                                    <select id="example">
                                        <label>Design Rating</label>
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                        <option value="5">5</option>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <textarea class="form-control" name="description" placeholder="Share your experience from using this application" type="text" form="add-review-form" class="text-muted"></textarea>
                                </div>

                                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
                                <input type="submit" value="Submit" class="btn btn-outline-success">
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-md-center">
        <div class="col-md-9">

            <% if (application.reviews.length === 0) { %>
                <p class="text-muted">No Comments Yet</p>
            <% } %>

            <% application.reviews.forEach(function(review) { %>
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"><%= review.title %></h5>
                        <h6 class="card-subtitle mb-2 text-muted"><%= moment(review.created).fromNow() %></h6>
                        <p class="card-text"><%= review.description %></p>
                        <a href="#" class="card-link">Another link</a>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>


</div>

<% include ../partials/footer %>