<% include ../partials/_header %>
<% include ../partials/_navbar %>

<div class="page-header">
    <div class="container">
        <div class="jumbotron text-center bg-transparent">
            <h1 class="jumbotron-heading">Apps for Education</h1>
            <p class="lead">Reviewed educational apps from teachers or parents.</p>
            <a class="btn btn-lg btn-outline-warning mt-2" href="/applications/new">Submit New Application</a>
        </div>
    </div>
</div>

<div class="container mt-5">
    <div class="row">

        <% include ../partials/_alerts %>

        <div class="col-lg-12 text-muted">
            <hr>
            <ul class="nav justify-content-center">
                <li class="nav-item">
                    <a class="nav-link" href="/applications">All</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/applications/general">General</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/applications/maths">Maths</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/applications/religion">Religion</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/applications/socialstudies">Social Studies</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/applications/english">English</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/applications/maltese">Maltese</a>
                </li>
            </ul>
            <form class="form-inline mt-4 justify-content-center">
                <input class="form-control" type="search" id="filterApps" placeholder="Search">
            </form>

            <hr>

            <div class="mt-5 row justify-content-center" id="apps">
                <h4 class="no-apps" id="no-apps">No apps match your search</h4>
                <% if (applications.length === 0) { %>
                    <h4>No apps in this category yet</h4>
                <% } %>
                <% applications.forEach(function(application){ %>
                <div class="box-shadow text-center app-container">
                    <img src="<%= application.thumbnail %>" alt="Card image cap" class="app-image">
                    <p class="container-title"><%= application.name %></p>
                    <p class="text-muted container-category"><%= application.category %></p>
                    <a href="/applications/<%= application._id %>" class="more-info"> More Info</a>
                    <div class="row">
                        <div class="col-md-6 index-rating">
                            <label for="rating">Play Store</label>
                            <select class="star-rating-ro public-rating" data-current-rating="<%= application.rating.playStore %>" name="playstore">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                            </select>
                        </div>
                        <div class="col-md-6 index-rating">
                            <label for="rating">EducApps</label>
                            <select class="star-rating-ro public-rating" data-current-rating="<%= Math.round(application.rating.users) %>" name="educapps">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                            </select>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>

<% include ../partials/_footer %>