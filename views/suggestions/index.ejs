<% include ../partials/_header %>
<% include ../partials/_navbar %>

<div class="page-header">
    <div class="container">
        <div class="jumbotron text-center bg-transparent">
            <h1 class="jumbotron-heading">Suggestions & Ideas</h1>
            <p class="lead">Apps for Education</p>
            <a class="btn btn-lg btn-outline-warning mt-2" href="/suggestions/new">Submit New Suggestion</a>
        </div>
    </div>
</div>

<div class="container mt-5">
    <div class="row">

        <% include ../partials/_alerts %>

        <div class="col-lg-12 text-muted">
            <hr>
            <ul class="nav justify-content-center">
                <li class="nav-item">
                    <a class="nav-link" href="/suggestions">All</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/suggestions/category/General %>">General</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/suggestions/category/Maths">Maths</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/suggestions/category/Religion">Religion</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/suggestions/category/Socialstudies">Social Studies</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/suggestions/category/English">English</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/suggestions/category/Maltese">Maltese</a>
                </li>
            </ul>

            <hr>

            <div class="mt-5 row justify-content-center" id="apps">
                <h4 class="no-apps" id="no-apps">No suggestions match your search</h4>
                <% if (suggestions.length === 0) { %>
                <h4>No suggestions of this category yet</h4>
                <% } %>
                <% suggestions.forEach(function(suggestion){ %>
                <div class="box-shadow text-center suggestion-container">
                    <h6 class="container-title"><%= suggestion.name %></h6>
                    <p class="text-muted container-category"><%= suggestion.category %></p>
                    <a href="/suggestions/<%= suggestion._id %>" class="more-info btn btn-primary"> More Info</a>
                </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>

<% include ../partials/_footer %>