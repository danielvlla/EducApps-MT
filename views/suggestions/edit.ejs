<% include ../partials/_header %>
<% include ../partials/_navbar %>

<div class="page-header">
    <div class="container">
        <div class="jumbotron text-center bg-transparent">
            <h1 class="jumbotron-heading">Update <%= suggestion.name %></h1>
        </div>
    </div>
</div>

<div class="container">
    <div class="py-2">
        <div class="row justify-content-md-center text-center">

            <% include ../partials/_alerts %>

            <form action="/suggestions/<%= suggestion._id %>?_method=PUT" method="post" class="app-new">
                <div class="form-group">
                    <input class="form-control" type="text" name="suggestion[name]" value="<%= suggestion.name %>">
                </div>

                <div class="form-group">
                    <textarea name="suggestion[description]" class="form-control" ><%= suggestion.description %></textarea>
                </div>

                <div class="form-group py-2">
                    <label>Category</label>
                    <select class="form-control text-center" name="suggestion[category]">
                        <option value="General">General</option>
                        <option value="Maths">Maths</option>
                        <option value="English">English</option>
                        <option value="Maltese">Maltese</option>
                        <option value="Religion">Religion</option>
                        <option value="Social Studies">Social Studies</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Update!</button>
            </form>
        </div>
    </div>

    <div class="py-5 text-center">
        <a href="/suggestions">Go Back</a>
    </div>
</div>
<% include ../partials/_footer %>