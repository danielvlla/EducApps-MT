<% include ../partials/_header %>
<% include ../partials/_navbar %>

<div class="page-header">
    <div class="container">
        <div class="jumbotron text-center bg-transparent">
            <h1 class="jumbotron-heading">Admin Panel</h1>
            <p class="lead">Reviewed educational apps from teachers or parents.</p>
        </div>
    </div>
</div>

<div class="container mt-5">
    <div class="row">

        <% include ../partials/_alerts %>

        <div class="col-lg-12 text-muted">

            <table id="appsAdmin" class="table table-striped table-bordered text-center">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th>Date Created</th>
                    <th>Comments</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
                </thead>

                <tbody>
                <% suggestions.forEach(function(suggestion){ %>
                <tr>
                    <td><a href="/suggestions/<%= suggestion._id %>"><%= suggestion.name %></a></td>
                    <td><%= suggestion.description %></td>
                    <td><%= suggestion.category %></td>
                    <td><%= suggestion.created.toDateString() %></td>
                    <td><%= suggestion.comments.length %></td>
                    <td>
                        <form action="/suggestions/<%= suggestion._id %>/edit">
                            <button class="review-delete btn btn-sm btn-outline-warning">Edit</button>
                        </form>
                    </td>
                    <td>
                        <form action="/suggestions/<%= suggestion._id %>?_method=DELETE" method="post">
                            <button class="review-delete btn btn-sm btn-outline-danger">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<% include ../partials/_footer %>